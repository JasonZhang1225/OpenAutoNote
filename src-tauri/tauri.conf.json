{
    "productName": "OpenAutoNote",
    "version": "1.0.0",
    "identifier": "com.openautonote.app",
    "build": {
        "beforeDevCommand": "cd python-core && ./oan2/bin/python main.py",
        "beforeBuildCommand": "",
        "devUrl": "http://localhost:8964",
        "frontendDist": "../dist-python"
    },
    "bundle": {
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "active": true,
        "targets": "all",
        "externalBin": [
            "bin/api-server",
            "bin/api-server.exe"
        ],
        "windows": {
            "nsis": {
                "compression": "none"
            }
        }
    },
    "app": {
        "withGlobalTauri": true,
        "security": {
            "csp": null
        },
        "windows": [
            {
                "label": "main",
                "url": "http://localhost:8964",
                "title": "OpenAutoNote",
                "visible": false,
                "width": 1200,
                "height": 800,
                "resizable": true
            },
            {
                "label": "splashscreen",
                "url": "splash.html",
                "decorations": false,
                "transparent": true,
                "width": 400,
                "height": 300,
                "center": true,
                "alwaysOnTop": true
            }
        ]
    }
}